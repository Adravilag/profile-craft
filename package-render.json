{
  "name": "cv-maker-backend",
  "version": "1.0.0",
  "description": "Backend del CV Maker - Root level for Render",
  "main": "apps/backend/dist-server/server-mongodb.js",
  "type": "module",
  "scripts": {
    "render:build": "npm ci && npm run setup:packages && cd apps/backend && npm run build",
    "render:start": "cd apps/backend && npm run render:start",
    "start": "cd apps/backend && node dist-server/server-mongodb.js",
    "build": "npm run setup:packages && cd apps/backend && npm run build",
    "dev": "cd apps/backend && npm run dev",
    "setup:packages": "npm run build --workspace=@cv-maker/shared && npm run build --workspace=@cv-maker/ui"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@types/cors": "^2.8.18",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/mongoose": "^5.11.96",
    "@types/multer": "^1.4.13",
    "@types/nodemailer": "^6.4.17",
    "axios": "^1.9.0",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^11.10.0",
    "cloudinary": "^2.6.1",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.15.1",
    "multer": "^2.0.1",
    "nodemailer": "^7.0.3",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.7",
    "@types/express": "^5.0.0",
    "@types/express-validator": "^3.0.0",
    "@types/node": "^22.15.21",
    "tsx": "^4.15.7"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "Adrian Davila Guerra",
  "license": "MIT"
}
